[core]
  excludesfile = ~/.gitignore
  editor = mvim -v

[include]
  path = ~/.gitconfig.local

[url "git@github.com:"]
  insteadOf     = "ghs:"
  pushInsteadOf = "ghs:"

[url "git://github.com/"]
  insteadOf = "gh:"

[url "git@gist.github.com:"]
  insteadOf     = "gists:"
  pushInsteadOf = "gists:"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@bitbucket.org:"]
  insteadOf     = "bbs:"
  pushInsteadOf = "bbs:"

[url "https://bitbucket.org/"]
  insteadOf = "bb:"

[alias]
  # Commit
  amend = commit --amend -C HEAD
  cp    = cherry-pick -ex
  undo  = !git reset --soft HEAD~ && git st
  ci    = commit

  # Staging
  addall = !git add -u && git add . && git st
  patch  = add --patch
  unadd  = !git reset HEAD --

  # Branches
  br  = branch -v
  bra = !git br -a
  brr = !git br -r
  brn = !git br --no-merged
  cb  = checkout -b
  pwd = rev-parse --abbrev-ref HEAD
  go  = "!f() { [ -z $1 ] && echo \"Usage: git go <branch>\" && exit 1; git branch $1 2>/dev/null; git checkout $1; }; f"
  co  = checkout

  # Workflow
  master  = checkout master
  develop = checkout develop
  ready   = rebase -i @{u}
  standup = !git lg --since yesterday
  purr    = pull --rebase
  cl      = clone
  finish  = "!f() { BRANCH=$(git pwd); git rebase -i $1 && git checkout $1 && git merge $BRANCH && git go $BRANCH; }; f"
  wip     = !git addall && git commit -m'Work in progress'
  unwip   = !git reset --soft HEAD~ && git unadd

  # Status
  st = status -sb

  # Logs
  lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

  # Utils
  aliases = "!git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^ = ]*\\) = \\(.*\\)/\\1\t = > \\2/' | sort"
  dt      = difftool
  mt      = mergetool

  # Git Flow
  feature = flow feature
  hotfix  = flow hotfix
  support = flow support
  release = flow release
