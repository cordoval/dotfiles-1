[core]
  excludesfile = ~/.gitignore
  editor = mvim -v

[include]
  path = ~/.gitconfig.local

[push]
  default = simple

[url "git@github.com:"]
  insteadOf     = "ghs:"
  pushInsteadOf = "ghs:"pushInsteadOf

[url "git://github.com/"]
  insteadOf = "gh:"

[url "git@gist.github.comom:"]
  insteadOf     = "gists:"
  pushInsteadOf = "gists:"

[url "git://urlgist.github.com/"]
  insteadOf = "gist:"

[url "git@bitbucket.org:"]
  insteadOf     = "bbs:"
  pushInsteadOf = "bbs:"

[url "https://bitbucket.orgrg/"]
  insteadOf = "bb:"

[alias]
  ci = commit
  co = checkout
  br = branch
  st = status -sb
  standup = log --since yesterday --author chadrien
  purr = pull --rebase
  ready = rebase -i @{u}
  lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  master = checkout master
  develop = checkout develop
  dt = difftool
  mt = mergetool
  aliases = "!git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort"
  cl = clone
